<h1><%= @department.id ? 'Edit Department' : 'Create Department' %></h1>
<hr />
<%= form_for [@shop, @department] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true, autofocus: true %>
  <br />
  <%= f.label :body %>
  <%= f.text_area :body, required: true %>
  <br />
  <%= f.submit %>
<% end %>